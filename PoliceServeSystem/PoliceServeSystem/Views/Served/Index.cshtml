@{
    ViewBag.Title = "Officer Served System";

    var listItemsIsServed = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "-Select-",
            Value = "-Select-",
            Selected = true
        },
        new SelectListItem
        {
            Text = "Yes",
            Value = "Yes"
        },
        new SelectListItem
        {
            Text = "No",
            Value = "No"
        }
    };
    var listItemsResult = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "-Select-",
            Value = "-Select-",
            Selected = true
        },
        new SelectListItem
        {
            Text = "Moved",
            Value = "Moved",
        },
        new SelectListItem
        {
            Text = "Run away",
            Value = "Run away"
        },
        new SelectListItem
        {
            Text = "Not home",
            Value = "Not home"
        },
        new SelectListItem
        {
            Text = "Other",
            Value = "Otherr"
        }
    };

}
@model PoliceServeSystem.ViewModels.ServedStatusDetail

<form>
    <div>
        @if (TempData["success"] != null)
        {
            <p>@TempData["success"]</p>
        }
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="form-group">
                <label>WarrantNo</label>
                @Html.TextBoxFor(model => model.WarrantNo, new {@class = "textbox", style = "width:120px"})
                <label>Offense Name</label>
                @Html.TextAreaFor(model => model.OffenseName, new {@class = "textarea", disabled = "disable", style = "width:300px"})
                <table>
                    <tr>
                        <td><input type="submit" value="Info" class="btn btn-info"/></td>
                        <td><input type="reset" value="Reset" text="clear" class="btn btn-success"/></td>
                        <td class="style:"><label>Type</label>@Html.TextBoxFor(model => model.OffenseType, new {@class = "textbox", disabled = "disable", style = "width:80px"})</td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="form-group">
                <label>CaseNo</label>
                @Html.TextBoxFor(model => model.CaseNo, new {@class = "textbox", disabled = "disable", style = "width:100px"})
                <label>AccusedNo</label>
                @Html.TextBoxFor(model => model.AccusedNo, new {@class = "textbox", disabled = "disable", style = "width:50px"})
                <label>First Name</label>
                @Html.TextBoxFor(model => model.AccusedFirstName, new {@class = "textbox", disabled = "disable", style = "width:100px"})
                <label>Last Name</label>
                @Html.TextBoxFor(model => model.AccusedLastName, new {@class = "textbox", disabled = "disable", style = "width:100px"})
                <label>Middel Name</label>
                @Html.TextBoxFor(model => model.AccusedMiddleName, new {@class = "textbox", disabled = "disable", style = "width:100px"})
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label>Street</label>
                @Html.TextBoxFor(model => model.AccusedStreet, new {@class = "textbox", disabled = "disable"})
                <label>City</label>
                @Html.TextBoxFor(model => model.AccusedCity, new {@class = "textbox", disabled = "disable", style = "width:150px"})
                <label>State</label>
                @Html.TextBoxFor(model => model.AccusedState, new {@class = "textbox", disabled = "disable", style = "width:50px"})
                <label>Zip</label>
                @Html.TextBoxFor(model => model.AccusedZip, new {@class = "textbox", disabled = "disable", style = "width:80px"})<br/>
                <label>Tel</label>
                @Html.TextBoxFor(model => model.AccusedTel, new {@class = "textbox", disabled = "disable", style = "width:100px"})
            </div>
        </div>
        <hr/>
        <div class="row">
            <label>Served Times</label>
            @Html.TextBoxFor(model => model.ServedTimes, new {@class = "textbox", disabled = "disable", style = "width:50px"})
            <label>Served Date</label>
            @Html.TextBoxFor(model => model.ServedDate, new {@class = "textbox", disabled = "disable"})
            <label>Result</label>
            @Html.DropDownListFor(m => m.Result, listItemsResult, new {@class = "dropdownlist"})<br/>
            <label>Served</label>
            @Html.DropDownListFor(m => m.IsServed, listItemsIsServed, new {@class = "dropdownlist", disabled = "disable"})
            <label>Served By</label>
            @Html.TextBoxFor(model => model.ServedBy, new {@class = "textbox"})<br/>
            <label>Comments</label>
            @Html.TextAreaFor(model => model.Comments, new {@class = "textarea", rows = "3", cols = "50"})
            <button class="btn btn-danger" id="AccusedSign" >Accused Sign</button>
        </div>
        <div class="row">
            <div class="col-ms-5">
                <div class="form-group">
                    @Html.ActionLink("Edit", "NewServe", new {WarrantNo = ViewBag.EditWarrantNo})
                </div>
                <div class="form-group">
                    @Html.ActionLink("Log Off", "Login", "Account")
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('#AccusedSign').on('Click', function () {
            window.open('/Signature/Signature', '_blank', 'left=100,top=100,width=400,height=300,toolbar=1,resizable=0');
        });
    });
</script>


